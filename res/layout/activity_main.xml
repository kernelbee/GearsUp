<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android1="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android1:layout_gravity="fill_vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android1:gravity="fill_vertical"
    android1:orientation="vertical"
    tools:context=".MainActivity" >

    <LinearLayout
        android1:layout_width="match_parent"
        android1:layout_height="wrap_content" >

        <TextView
            android1:id="@+id/lable_tratio"
            android1:layout_width="83dp"
            android1:layout_height="wrap_content"
            android1:layout_gravity="top"
            android1:layout_weight="0.15"
            android1:text="@string/tratio"
            android1:textSize="16sp" />

        <EditText
            android1:id="@+id/text_tratio"
            android1:layout_width="0dp"
            android1:layout_height="wrap_content"
            android1:layout_gravity="top"
            android1:layout_weight="1"
            android1:ems="10"
            android1:hint="@string/hint_ratio"
            android1:inputType="numberDecimal" />
        
    </LinearLayout>

    <EditText
        android1:id="@+id/text_output"
        android1:layout_width="wrap_content"
        android1:layout_height="0dp"
        android1:layout_gravity="top|center_horizontal"
        android1:layout_weight="0.74"
        android1:enabled="true"
        android1:hint="@string/hint_output"
        android1:inputType="textMultiLine|textNoSuggestions"
        android1:scrollbars="vertical"
        android1:textAlignment="viewStart"
        android1:textSize="12sp" />

    <ProgressBar
        android1:id="@+id/progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android1:layout_width="match_parent"
        android1:layout_height="10dp"
        android1:layout_gravity="center_horizontal|fill_horizontal"
        android1:max="100" />

    <LinearLayout
        android1:layout_width="match_parent"
        android1:layout_height="wrap_content" >

        <Button
            android1:id="@+id/Button0"
            android1:layout_width="wrap_content"
            android1:layout_height="wrap_content"
            android1:layout_gravity="bottom|left"
            android1:layout_weight="1"
            android1:gravity="center_vertical|center_horizontal|left"
            android1:onClick="search_ptrain_type_2"
            android1:text="@string/text_button0" />

        <Button
            android1:id="@+id/Button1"
            android1:layout_width="wrap_content"
            android1:layout_height="wrap_content"
            android1:layout_gravity="bottom|right"
            android1:layout_weight="1"
            android1:gravity="center_vertical|center_horizontal|right"
            android1:onClick="search_ptrain_type_4"
            android1:text="@string/text_button1" />

    </LinearLayout>

</LinearLayout>